<!DOCTYPE html>
<html lang="en">

<head>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous" />

  <title>Start Game</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
  <script defer src="/scripts/create-map.js"></script>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= apiKey %>&callback=initMap"></script>

</head>

<body>
  <%- include('partials/_header', user); %>
    <main>
      <div id="map-options" data-map-options="<%= JSON.stringify(map) %>"></div>
      <div id="map"></div>
      <form class="form-inline" action="/games/new" method="POST">

        <input type="hidden" id="center" name="center" value="<%= JSON.stringify(map.center) %>">
        <input type="hidden" id="zoom" name="zoom" value="<%= JSON.stringify(map.zoom) %>">
        <input type="hidden" id="bounds" name="restriction" value="<%= JSON.stringify(map.restriction) %>">

        <div class="form-group mb-2">
          <button type="submit" class="btn btn-primary" id="create-map">Create New Game</button>
        </div>
      </form>
    </main>
</body>

</html>
